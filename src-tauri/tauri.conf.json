{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dt-metadata",
  "version": "0.1.0",
  "identifier": "com.kcjer.dt-metadata",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "dragDropEnabled": true,
        "title": "dt-metadata",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "*"
        ]
      },
      "csp": {
        "default-src": [
          "'self'",
          "ipc:",
          "http://ipc.localhost",
          "asset:",
          "tauri:"
        ],
        "img-src": [
          "'self'",
          "asset:",
          "http://asset.localhost",
          "tauri:"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}